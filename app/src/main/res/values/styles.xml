<resources>

    <!--Тема логин скрина-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!--Тема в приложении для старых версий ОБЯЗАТЕЛЬНО СИНХРОНИЗИРОВАТЬ С НОВОЙ-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">@color/colorAccent</item> <!--это цвет активных галочек-->
        <item name="colorControlHighlight">@color/colorAccent</item> <!--это цвет фона выделения в меню-->
        <item name="colorControlNormal">@color/colorAccent</item> <!--это цвет неактивных галочек и скролбара-->
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!--Тема прогрес диалога-->
    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#1976D2</item>
    </style>

